{
  "include": ["**/*"],
  "exclude": ["node_modules/**", "dist/**", "tests/**", "coverage/**"],
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src",
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  }
}
